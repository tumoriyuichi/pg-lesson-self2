<h1 class="text-center">基本情報</h1>
<hr>
<section id="user-form">
  <%= simple_form_for @user ,:url => {:action => :create} do |f| %>
    <table class="table">
      <thead>
        <tr>
          <th>項目</th>
          <th>入力内容</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= f.label :name %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :age %></td>
          <td><%= f.text_field :age %></td>
        </tr>
        <tr>
          <td><%= f.label :mail %></td>
          <td><%= f.text_field :mail %></td>
        </tr>
        <tr>
          <td><%= f.label :address %></td>
          <td><%= f.text_field :address %></td>
        </tr>
        <tr>
          <td><%= f.label :gender %></td>
          <td><%= f.text_field :gender %></td>
        </tr>
        <tr>
          <td><%= f.label :program %></td>
          <td><%= f.text_field :program %></td>
        </tr>
        <tr>
          <td><%= f.label :skils %></td>
          <td><%= f.text_field :skils %></td>
        </tr>
        <tr>
          <td><%= f.label :image %></td>
          <td><%= f.file_field :image %></td>
        </tr>
      </tbody>
    </table>
    <div class="btn-wrapper text-center">
      <p><%= f.button :submit, "送信", :class=>"btn btn-primary" %></p>
    </div>
  <% end %>
</section>